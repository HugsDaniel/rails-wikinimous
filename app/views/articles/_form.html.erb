<div class="new_article" id="new_article">
  <%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", "data-editor" => "markdown", rows: 10 %>
    <%= f.submit %>
  </div>
  <% end %>
</div>
